<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/style.css" />
        <!-- <link rel="icon" type="image/x-icon" href="/favicon.ico" /> -->
        <link rel="icon" type="image/svg" sizes="any" href="favicon.svg" />
        <!-- <link rel="manifest" href="/site.webmanifest" /> -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            rel="stylesheet"
        />
        <title>Chatbot - Sawotratap</title>
        <style></style>
    </head>
    <body>
        <div class="container">
            <aside class="sidebar" id="sidebar">
                <h2>Pertanyaan</h2>
                <ul id="question-list">
                    <% for (const question in qaList) { %>
                    <li><%= question %></li>
                    <% } %>
                </ul>
            </aside>
            <main class="chat-container">
                <div class="chat-card">
                    <div class="chat-card-title">
                        <button class="menu-toggle" id="menu-toggle">â˜°</button>
                        Sawotratap Answer
                    </div>
                    <div id="chat-output"></div>
                    <div class="input-container">
                        <input type="text" id="chat-input" placeholder="Tanyakan sesuatu..." />
                        <button id="send-button">Kirim</button>
                    </div>
                </div>
            </main>
        </div>
        <script src="/js/app.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const itemList = document.getElementById("question-list");
                const selectedItem = document.getElementById("chat-input");
                const menuToggle = document.getElementById("menu-toggle");
                const sidebar = document.getElementById("sidebar");

                itemList.addEventListener("click", function (e) {
                    if (e.target && e.target.nodeName === "LI") {
                        selectedItem.value = e.target.textContent;
                        selectedItem.focus();
                        if (window.innerWidth <= 768) {
                            sidebar.classList.remove("active");
                        }
                    }
                });

                itemList.addEventListener("keydown", function (e) {
                    if (e.key === "Enter" && e.target.nodeName === "LI") {
                        selectedItem.value = e.target.textContent;
                        selectedItem.focus();
                        if (window.innerWidth <= 768) {
                            sidebar.classList.remove("active");
                        }
                    }
                });

                menuToggle.addEventListener("click", function (e) {
                    e.stopPropagation();
                    sidebar.classList.toggle("active");
                });

                document.addEventListener("click", function (e) {
                    if (
                        window.innerWidth <= 768 &&
                        !sidebar.contains(e.target) &&
                        e.target !== menuToggle
                    ) {
                        sidebar.classList.remove("active");
                    }
                });
            });
        </script>
    </body>
</html>
