<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/style.css" />
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            rel="stylesheet"
        />

        <title>DakiChatBot</title>
    </head>
    <body>
        <div class="container">
            <aside class="sidebar">
                <h2>Pertanyaan</h2>
                <ul id="question-list">
                    <% for (const question in qaData) { %>
                    <li><%= question %></li>
                    <% } %>
                </ul>
            </aside>
            <main class="chat-container">
                <div class="chat-card">
                    <div class="chat-card-title">DakiAi</div>
                    <div id="chat-output"></div>
                    <input type="text" id="chat-input" placeholder="Tanyakan sesuatu..." />
                    <button id="send-button">Kirim</button>
                </div>
            </main>
        </div>
        <script src="/js/app.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const itemList = document.getElementById("question-list");
                const selectedItem = document.getElementById("chat-input");

                // Menggunakan event delegation
                itemList.addEventListener("click", function (e) {
                    if (e.target && e.target.nodeName === "LI") {
                        selectedItem.value = e.target.textContent;
                        selectedItem.focus();
                    }
                });

                // Menangani navigasi keyboard
                itemList.addEventListener("keydown", function (e) {
                    if (e.key === "Enter" && e.target.nodeName === "LI") {
                        selectedItem.value = e.target.textContent;
                        selectedItem.focus();
                    }
                });

                // Opsional: Mencegah form dari submit
                document.getElementById("myForm").addEventListener("submit", function (e) {
                    e.preventDefault();
                    console.log("Form submitted with value:", selectedItem.value);
                });
            });
        </script>
    </body>
</html>
